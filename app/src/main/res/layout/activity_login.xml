        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="#888"
        android:textColor="#ddd"
        app:layout_constraintBottom_toTopOf="@id/h28"
        app:layout_constraintLeft_toRightOf="@id/v10"
